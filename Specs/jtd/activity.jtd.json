{
    "properties": {
        "version": {
            "type": "string"
        },
        "uuid": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "created_at": {
            "type": "string"
        },
        "last_edited_at": {
            "type": "string"
        },
        "status": {
            "ref": "$status"
        },
        "authors": {
            "elements": {
                "ref": "$author"
            }
        },
        "skills": {
            "elements": {
                "ref": "$skill"
            }
        },
        "hmi": {
            "elements": {
                "ref": "$hmi"
            }
        },
        "types": {
            "elements": {
                "ref": "$type"
            }
        },
        "tags": {
            "elements": {
                "ref": "$tag"
            }
        },
        "locales": {
            "elements": {
                "ref": "$locale"
            }
        },
        "l10n": {
            "elements": {
                "ref": "$l10n"
            }
        },
        "exercises_payload": {
            "properties": {
                "options": {
                    "properties": {
                        "shuffle_exercises": {
                            "type": "boolean"
                        },
                        "shuffle_groups": {
                            "type": "boolean"
                        }
                    }
                },
                "exercise_groups": {
                    "elements": {
                        "ref": "$group"
                    }
                }
            }
        }
    },
    "definitions": {
        "$author": {
            "enum": ["leka", "aurore_kiesler", "julie_tuil"]
        },
        "$hmi": {
            "enum": ["robot", "tablet", "magic_cards", "tablet_robot"]
        },
        "$locale": {
            "enum": ["en_US", "fr_FR"]
        },
        "$status": {
            "enum": ["draft", "published"]
        },
        "$l10n": {
            "properties": {
                "locale": {
                    "ref": "$locale"
                },
                "details": {
                    "ref": "$l10n/details"
                }
            }
        },
        "$l10n/details": {
            "properties": {
                "icon": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string",
                    "nullable": true
                },
                "short_description": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "instructions": {
                    "type": "string",
                    "nullable": true
                }
            }
        },
        "$skill": {
            "type": "string"
        },
        "$type": {
            "enum": ["one_on_one", "group"]
        },
        "$tag": {
            "type": "string"
        },
        "$group": {
            "properties": {
                "group": {
                    "elements": {
                        "ref": "$exercise"
                    }
                }
            }
        },
        "$exercise": {
            "discriminator": "interface",
            "mapping": {
                "touchToSelect": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "payload": {
                            "ref": "$exercise/payload/touchToSelect"
                        }
                    }
                },
                "robotThenTouchToSelect": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/touchToSelect"
                        }
                    }
                },
                "listenThenTouchToSelect": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/touchToSelect"
                        }
                    }
                },
                "observeThenTouchToSelect": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/touchToSelect"
                        }
                    }
                },
                "dragAndDropIntoZones": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropIntoZones"
                        }
                    }
                },
                "listenThenDragAndDropIntoZones": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropIntoZones"
                        }
                    }
                },
                "observeThenDragAndDropIntoZones": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropIntoZones"
                        }
                    }
                },
                "robotThenDragAndDropIntoZones": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropIntoZones"
                        }
                    }
                },
                "dragAndDropToAssociate": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },

                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropToAssociate"
                        }
                    }
                },
                "listenThenDragAndDropToAssociate": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropToAssociate"
                        }
                    }
                },
                "observeThenDragAndDropToAssociate": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropToAssociate"
                        }
                    }
                },
                "robotThenDragAndDropToAssociate": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "gameplay": {
                            "ref": "$exercise/gameplay"
                        },
                        "action": {
                            "ref": "$exercise/action"
                        },
                        "payload": {
                            "ref": "$exercise/payload/dragAndDropToAssociate"
                        }
                    }
                },
                "danceFreeze": {
                    "properties": {
                        "payload": {
                            "ref": "$exercise/payload/danceFreeze"
                        }
                    }
                },
                "gamepadJoyStickColorPad": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        }
                    }
                },
                "gamepadArrowPadColorPad": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        }
                    }
                },
                "gamepadArrowPad": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        }
                    }
                },
                "hideAndSeek": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        }
                    }
                },
                "musicalInstruments": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },

                        "payload": {
                            "ref": "$exercise/payload/musicalInstruments"
                        }
                    }
                },
                "melody": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        },
                        "payload": {
                            "ref": "$exercise/payload/melody"
                        }
                    }
                },
                "pairing": {
                    "properties": {
                        "instructions": {
                            "ref": "$exercise/instructions"
                        }
                    }
                }
            }
        },
        "$exercise/instructions": {
            "elements": {
                "properties": {
                    "locale": {
                        "ref": "$locale"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        },
        "$exercise/interface": {
            "enum": [
                "touchToSelect",
                "robotThenTouchToSelect",
                "listenThenTouchToSelect",
                "observeThenTouchToSelect",
                "dragAndDropIntoZones",
                "listenThenDragAndDropIntoZones",
                "observeThenDragAndDropIntoZones",
                "robotThenDragAndDropIntoZones",
                "dragAndDropToAssociate",
                "listenThenDragAndDropToAssociate",
                "observeThenDragAndDropToAssociate",
                "robotThenDragAndDropToAssociate",
                "danceFreeze",
                "gamepadJoyStickColorPad",
                "gamepadArrowPadColorPad",
                "gamepadArrowPad",
                "hideAndSeek",
                "musicalInstruments",
                "melody",
                "pairing"
            ]
        },
        "$exercise/gameplay": {
            "enum": ["findTheRightAnswers", "associateCategories"]
        },
        "$exercise/action": {
            "properties": {
                "type": {
                    "enum": ["ipad", "robot"]
                },
                "value": {
                    "properties": {
                        "type": {
                            "enum": ["image", "audio", "color"]
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "$exercise/payload/touchToSelect": {
            "properties": {
                "choices": {
                    "elements": {
                        "properties": {
                            "type": {
                                "enum": ["color", "image", "sfsymbol", "emoji"]
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "optionalProperties": {
                            "is_right_answer": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            },
            "optionalProperties": {
                "shuffle_choices": {
                    "type": "boolean"
                }
            }
        },
        "$exercise/payload/dragAndDropIntoZones": {
            "properties": {
                "dropZoneA": {
                    "properties": {
                        "type": {
                            "enum": ["image"]
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "choices": {
                    "elements": {
                        "properties": {
                            "type": {
                                "enum": ["image"]
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "optionalProperties": {
                            "dropZone": {
                                "enum": ["zoneA", "zoneB"]
                            }
                        }
                    }
                }
            },
            "optionalProperties": {
                "dropZoneB": {
                    "properties": {
                        "type": {
                            "enum": ["image"]
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "shuffle_choices": {
                    "type": "boolean"
                }
            }
        },
        "$exercise/payload/dragAndDropToAssociate": {
            "properties": {
                "choices": {
                    "elements": {
                        "properties": {
                            "type": {
                                "enum": ["image"]
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "optionalProperties": {
                            "category": {
                                "enum": ["catA", "catB", "catC"]
                            }
                        }
                    }
                }
            },
            "optionalProperties": {
                "shuffle_choices": {
                    "type": "boolean"
                }
            }
        },
        "$exercise/payload/danceFreeze": {
            "properties": {
                "songs": {
                    "elements": {
                        "ref": "song"
                    }
                }
            }
        },
        "$exercise/payload/musicalInstruments": {
            "properties": {
                "instrument": {
                    "enum": ["xylophone"]
                },
                "scale": {
                    "enum": ["majorHeptatonic", "majorPentatonic"]
                }
            }
        },
        "$exercise/payload/melody": {
            "properties": {
                "instrument": {
                    "enum": ["xylophone"]
                },
                "songs": {
                    "elements": {
                        "ref": "song"
                    }
                }
            }
        },
        "song": {
            "properties": {
                "audio": {
                    "type": "string"
                },
                "labels": {
                    "elements": {
                        "ref": "label"
                    }
                }
            }
        },
        "label": {
            "properties": {
                "locale": {
                    "type": "string"
                },
                "value": {
                    "ref": "localizedValues"
                }
            }
        },
        "localizedValues": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "icon": {
                    "type": "string"
                }
            }
        }
    }
}
