# Fastlane Match Configuration
# For more information about match options, see:
# https://docs.fastlane.tools/actions/match/

# Git repository containing encrypted certificates and provisioning profiles
# This should be a private repository with restricted access
git_url('https://github.com/leka/certificates')

# Storage mode - 'git' stores certificates in a Git repository
# Alternative modes: 'google_cloud', 's3', 'gitlab_secure_files'
storage_mode('git')

# Default certificate type
# Override this in individual lane calls as needed
type('development')

